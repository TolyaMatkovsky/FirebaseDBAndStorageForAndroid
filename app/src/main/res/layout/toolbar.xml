<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    style="@style/root">

    <RelativeLayout
        style="@style/root"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/toolbar_left_button"
            style="@style/root_wrap"
            android:padding="@dimen/double_padding"
            android:src="@drawable/icon_arrow_back"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/toolbar_title"
            style="@style/root_wrap"
            android:text="Sections"
            android:textColor="@color/toolbarTitleColor"
            android:textSize="@dimen/text_size_title_name"
            android:padding="@dimen/double_padding"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/toolbar_right_button"
            style="@style/root_wrap.MainStyle" />
        <TextView
            android:id="@+id/save_button"
            android:visibility="gone"
            style="@style/root_wrap.AddSectionStyle" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>